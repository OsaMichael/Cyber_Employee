@model Cyber_Employee.Models.ProjectModel

@{
    ViewBag.Title = "EditProject";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ol class="breadcrumb page-breadcrumb pull-right">
    @*<li>
            <i class="fa fa-home"></i>&nbsp;<a class="parent-item" href="index.html">Home</a>&nbsp;<i class="fa fa-angle-right"></i>
        </li>
        <li>
            <a class="parent-item" href="index">Restaurant</a>&nbsp;<i class="fa fa-angle-right"></i>
        </li>*@

</ol>


@*<h1 class="alert-info">EDIT RESTAURANTS</h1>*@
<div class="card-body" id="bar-parent">
    <form action="EditProject" method="Post" id="form_sample_1" class="form-horizontal" novalidate="novalidate">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-body">
            <input type="hidden" name="ProjectId" value="@Model.ProjectId" />
            <div class="form-group row">
                <label class="control-label col-md-3">
                    Name
                    <span class="required" aria-required="true"> * </span>
                </label>
                <div class="col-md-12">
                    @Html.DropDownListFor(m => m.StaffId, (IEnumerable<SelectListItem>)ViewBag.staff, " select  name", new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.StaffId, "", new { @class = "text-danger" })
                </div>
            </div>

        </div>
        <div class="form-group row">
            <label class="control-label col-md-3">
                Project Description
                @*<span class="required" aria-required="true"> * </span>*@
            </label>
            <div class="col-md-12">
                @Html.TextAreaFor(model => model.ProjectDescription, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.ProjectDescription, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group row">
            <label class="control-label col-md-3">
                Start Date
                @*<span class="required" aria-required="true"> * </span>*@
            </label>
            <div class="col-md-12">
                <input type="date" name="StartDate" class="form-dateInput" value="mm/dd/yyyy" />
                @Html.ValidationMessageFor(m => m.StartDate, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group row">
            <label class="control-label col-md-3">
                EndDate
                @*<span class="required" aria-required="true"> * </span>*@
            </label>
            <div class="col-md-12">
                <input type="date" name="EndDate" class="form-dateInput" value="mm/dd/yyyy" />
                @Html.ValidationMessageFor(m => m.EndDate, "", new { @class = "text-danger" })
            </div>
        </div>
  
            <div class="form-actions">
                <div class="row">
                    <div class="offset-md-3 col-md-6 pull-right">
                        <button type="submit" class="btn btn-info" id="submitData">Save</button>
                        @*<button type="button" class="btn btn-default">Cancel</button>*@
                    </div>
                </div>
            </div>
            <div class=" col-md-1">
                <a href="@Url.Action("Index","Staff", new { area = "" })" class="btn btn-chatpane">Back To List(s)</a>
            </div>
        </div>

    </form>
</div>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

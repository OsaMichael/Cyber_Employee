@model IEnumerable<Cyber_Employee.Models.ProjectModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*<h1 class="alert-info">ELIGIBLE RESTAURANTS</h1>*@

<p class="btn-default pull-right">
    @using (Html.BeginForm("Index", "Project", FormMethod.Get))
    {
            @Html.RadioButton("searchBy", "Name", true)<text>Name</text>
            @Html.TextBox("search") <input type="submit" value="Search" />     
    }
</p>

<div class="btn-group">

    <a href="@Url.Action("CreateProject", "Project")" class="btn btn-info "><i class="fa fa-plus"></i>Add New </a>

</div>
<table class="table table-striped table-bordered table-hover @*table-checkable order-column valign-middle" id="example4*@">
    <thead>
        <tr>
            @*<th> Rest Id </th>*@
            <th> Staff Name </th>
            <th> Project Description </th>
            <th> StartDate </th>
            <th> EndDate </th>
            <th> Action </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
            {
            <tr class="gradeX odd" role="row" id="row-@item.ProjectId">

                <td>@Html.DisplayFor(modelItem => item.Staff.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.ProjectDescription)</td>
                <td>@Html.DisplayFor(modelItem => item.StartDate)</td>
                <td>@Html.DisplayFor(modelItem => item.EndDate)</td>

                @*<td>@String.Format("{0:d}", item.CreatedDate)</td>*@


                <td>
                    <a href="/Prject/EditProject?id=@item.ProjectId" class="btn btn-primary btn-xs">
                        <i class="fa fa-pencil"></i>Edit
                    </a>
                    @*<a href="#" class="js-cancel-restaurant" data-restaurant-id="@item.RestId" data-name="@item.RestName">Cancel</a>*@
                    @*<a href="#" class="btn btn-danger btn-xs" id="deleteaction" data-id="@item.ProjectId" data-name="@item.Name">
                        <i class="fa fa-trash-o "></i> Delete
                    </a>*@
                </td>

            </tr>
        }
    </tbody>
</table>
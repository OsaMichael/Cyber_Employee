<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>


    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)






</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Cyber Employee", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink(" Create Staff", "CreateStaff", "Staff")</li>
                    <li>@Html.ActionLink(" View Staffs", "Index", "Staff")</li>
                    <li>@Html.ActionLink("Assign Project", "CreateProject", "Project")</li>
                    <li>@Html.ActionLink("View Assigned Project", "Index", "Project")</li>
                    <li>@Html.ActionLink("Compute PAYE", "ComputePaye", "Staff")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @RenderSection("Script", false)
    <script>
        $(function () {
            //Initiate Page Loader
            $("html").removeClass("loading");


            ///Application Successful
            var succ = $('#success').val();
            if (succ !== "" && succ !== null && succ !== undefined) {
                toastr.success(succ);
            }

            ///Registration Error
            var err = $('#error').val();
            if (err !== "" && err !== null && err !== undefined) {
                toastr.error(err);
            }

        });

    </script>

</body>
</html>


</body>
</html>

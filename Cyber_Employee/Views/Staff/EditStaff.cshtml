@model Cyber_Employee.Models.StaffModel

@{
    ViewBag.Title = "EditStaff";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ol class="breadcrumb page-breadcrumb pull-right">
    @*<li>
            <i class="fa fa-home"></i>&nbsp;<a class="parent-item" href="index.html">Home</a>&nbsp;<i class="fa fa-angle-right"></i>
        </li>
        <li>
            <a class="parent-item" href="index">Restaurant</a>&nbsp;<i class="fa fa-angle-right"></i>
        </li>*@

</ol>


    @*<h1 class="alert-info">EDIT RESTAURANTS</h1>*@
    <div class="card-body" id="bar-parent">
        <form action="EditStaff" method="Post" id="form_sample_1" class="form-horizontal" novalidate="novalidate" >
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-body">
                <input type="hidden" name="StaffId" value="@Model.StaffId" />
                <div class="form-group row">
                    <label class="control-label col-md-3">
                         Name
                        <span class="required" aria-required="true"> * </span>
                    </label>
                    <div class="col-md-5">
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control input-height", placeholder = "enter caterer name" })
                        @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                       
                    </div>
                </div>

                <div class="form-group row">
                    <label class="control-label col-md-3">
                        Department
                        <span class="required" aria-required="true"> * </span>
                    </label>
                    <div class="col-md-5">
                        @Html.TextBoxFor(m => m.Department, new { @class = "form-control input-height", placeholder = "enter caterer name" })
                        @Html.ValidationMessageFor(m => m.Department, "", new { @class = "text-danger" })
                      
                    </div>
                </div>

                <div class="form-group row">
                    <label class="control-label col-md-3">
                        Address
                        <span class="required" aria-required="true"> * </span>
                    </label>
                    <div class="col-md-5">
                        @Html.TextBoxFor(m => m.Address, new { @class = "form-control input-height", placeholder = "enter caterer name" })
                        @Html.ValidationMessageFor(m => m.Address, "", new { @class = "text-danger" })
                    
                    </div>
                </div>
                <div class="form-actions">
                    <div class="row">
                        <div class="offset-md-3 col-md-6 pull-right">
                            <button type="submit" class="btn btn-info" id="submitData">Save</button>
                            @*<button type="button" class="btn btn-default">Cancel</button>*@
                        </div>
                    </div>
                </div>
                <div class=" col-md-1">
                    <a href="@Url.Action("Index","Staff", new { area = "" })" class="btn btn-chatpane">Back To List(s)</a>
                </div>
            </div>

        </form>
    </div>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
